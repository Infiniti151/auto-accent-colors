<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="auto-adwaita-colors">
    <schema id="org.gnome.shell.extensions.auto-adwaita-colors" path="/org/gnome/shell/extensions/auto-adwaita-colors/">

        <!-- The current version of the Adwaita-Colors theme installed by the extension -->
        <key name="current-version" type="s">
            <default>"Not yet Installed"</default>
            <summary>Current Version of Adwaita-Colors</summary>
            <description>
                Stores the version tag of the currently installed Adwaita-Colors theme.
                This is updated after each successful installation or update.
            </description>
        </key>

        <!-- Notifications -->
        <key name="notify-about-releases" type="b">
            <default>true</default>
            <summary>Notifications about releases</summary>
            <description>
                Get notified when there is new releases to be downloaded
            </description>
        </key>

        <!-- The current accent color of the Adwaita-Colors theme installed by the extension -->
        <key name="accent-color" type="s">
            <default>"blue"</default>
            <summary>Current accent color of Adwaita-colors</summary>
            <description>
                Stores the current accent color of Adwaita-colors.
                Syncs with GNOME accent-color
            </description>
        </key>
        
        <!-- The current version of the Adwaita-Colors theme installed by the extension -->
        <key name="icon-theme" type="s">
            <default>"Adwaita-blue"</default>
            <summary>Current variant of Adwaita-colors</summary>
            <description>
                Stores the current variant of Adwaita-colors.
                Syncs with GNOME accent-color
            </description>
        </key>

    </schema>
</schemalist>
